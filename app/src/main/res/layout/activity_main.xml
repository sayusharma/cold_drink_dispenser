<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#B5BEF4"
        app:cardElevation="8dp"
        android:id="@+id/toolbar"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_ice"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="@string/app_name"
                android:textColor="@color/colorAccent"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_below="@id/toolbar"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:onClick="onClickCoke"
            android:layout_marginTop="10dp"
            android:layout_height="120dp">
            <ImageView
                android:src="@drawable/coke"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            app:cardCornerRadius="10dp"
            android:onClick="onClickPepsi"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="120dp">
            <ImageView
                android:src="@drawable/pepsi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:onClick="onClickFizz"
            android:layout_marginTop="10dp"
            android:layout_height="120dp">
            <ImageView
                android:src="@drawable/appy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/textCurrentDrink"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>